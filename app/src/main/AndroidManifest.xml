<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.zheil.com.quiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.quiz.QuizGameActivity" android:theme="@style/NoBar" android:screenOrientation="portrait"/>
        <activity android:name=".presentation.main.MainActivity" android:theme="@style/NoBar" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.finalQuiz.FinalQuizActivity" android:theme="@style/NoBar" android:screenOrientation="portrait"/>
        <activity android:name=".presentation.rules.RulesActivity" android:theme="@style/Theme.AppCompat.Dialog" android:screenOrientation="portrait" android:label="Правила"/>
    </application>

</manifest>